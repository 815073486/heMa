<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hemauser.userdao.UserDao">
   <select id="userVerify" resultType="int">
       SELECT COUNT(*) FROM hemauser WHERE username=#{username}
   </select>

    <select id="phoneVerify" resultType="int">
      SELECT COUNT(*) FROM hemauser WHERE loginname=#{phone}
   </select>

    <insert id="addUser">
       INSERT INTO `hemauser`(`username`,`loginname`,`userpwd`,`useremail`,`idcard`)
        VALUES(#{username},#{loginname},#{userpwd},#{useremail},#{idcare})
    </insert>

    <insert id="verify">
        INSERT INTO `verify`(`verify`,`vphone`) VALUES(#{verify},#{vphone})
    </insert>

    <select id="login" resultType="int">
        SELECT COUNT(*) FROM hemauser WHERE `loginname`=#{loginname} OR username=#{username}  AND `userpwd`=#{userpwd}
    </select>
</mapper>
